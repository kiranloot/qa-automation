<div class='col-md-9 right-col store-credits'>
  <section>
    <h1><%= t('user_accounts.store_credits.title') %></h1>
    <h4><%= t('user_accounts.store_credits.subtitle') %></h4>
    <div class='row refer'>
      <div class='col-sm-5 col-xs-6'>
        <div class='refer-box'>
          <h2>$<%= amount_earned_via_referral %></h2>
          <h3><%= t('user_accounts.store_credits.dollars_earned') %></h3>
        </div>
      </div>
      <div class='col-sm-5 col-xs-6'>
        <div class='refer-box'>
          <h2><%= number_friends_joined_via_referral %></h2>
          <h3><%= t('user_accounts.store_credits.friends_joined') %></h3>
        </div>
      </div>
    </div>
    <div class='form-actions'>
      <%= link_to t(:referer_friend).upcase, '#', role:"button", class: "friendbuy-#{ENV['FRIENDBUY_MENU_CAMPAIGN']} frndSend btn btn-secondary" %>
    </div>
    <div class='refer-image align-center'>
      <%= image_tag('store-credits.png', class: 'img-responsive') %>
    </div>
  </section>
</div>

<script>
  window['friendbuy'] = window['friendbuy'] || [];
  window['friendbuy'].push(['widget', "<%= ENV['FRIENDBUY_MENU_CAMPAIGN'] %>", {configuration: {share_button: false}}]);
</script>
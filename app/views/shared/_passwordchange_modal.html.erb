<div class='modal update fade' id='passwordchange_modal' tabindex='-1' role='dialog' aria-hidden='true'>
 <div class='modal-dialog'>
    <div class='modal-content'>

      <div class='modal-header'>
        <div class='modal-close' data-dismiss='modal'>
          <i class='fa fa-times'></i>
        </div>
        <div class='cart-modal-title'>
          <strong><%= t('user_accounts.modals.password.title') %></strong>
        </div>
      </div>

      <div class='modal-body'>

        <%= form_for('user', :url => user_account_update_password_path(current_user)) do |f| %>
          <div  class='field'>
            <div class='field'><%= t('user_accounts.modals.password.current_password') %></div>
            <%= f.password_field :current_password %>
            <div class='field'><%= t('user_accounts.modals.password.new_password') %></div>
            <%= f.password_field :password %>
            <div class='field'><%= t('user_accounts.modals.password.new_password_confirmation') %></div>
            <%= f.password_field :password_confirmation %>
          </div>
          <%= f.submit t(:update), class: 'btn btn-secondary pull-left'  %>
        <% end %>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
<h2><%= t('devise.unlocks.resend_unlock_instructions') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :role => 'form' }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('devise.unlocks.resend_unlock_instructions') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

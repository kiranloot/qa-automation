<div class='white-bg'>
  <div class='container base spacer'>

    <div id='edit_account_info'>

      <div class='row'>
        <div class='col-sm-12'>
          <h3><%= t('devise.registrations.edit_account_info').upcase %></h3>
        </div>
      </div>

      <div class='row'>
        <div class='col-sm-6 edit-container'>

          <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'card_form form-vertical form-validate', :method => :put, :role => 'form' }) do |f| %>
            <%= f.error_notification %>
            <div class='form-inputs'>
              <div class='row'>
                <div class='col-md-12'>
                  <%= f.input :email, :required => true, :autofocus => true %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p><%= t('devise.registrations.waiting_confirmation', email: resource.unconfirmed_email) %></p>
                  <% end %>
                  <%= f.input :current_password, :required => true, :label => t('devise.registrations.current_password') %>
                  <%= f.input :password, :autocomplete => 'off', :required => true, :label => t('devise.registrations.new_password') %>
                  <%= f.input :password_confirmation, :required => true, :label => t('devise.registrations.new_password_confirmation') %>
                </div>
              </div>
            </div>
            <div class='form-actions'>
              <div class='row'>
                <div class='col-sm-8 col-xs-3 back'>
                  <i class="fa fa-caret-left"></i> <%= link_to t(:back), :back %>
                </div>
                <div class='col-sm-4 col-xs-9'>
                  <%= f.button :submit, t(:update), :class => 'btn btn-secondary' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class='col-md-3 hidden-xs'></div>
    </div>
  </div>
</div>


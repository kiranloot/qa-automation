paginated_collection(coupons, param_name: 'coupon_page', download_links: false) do
  table_for(collection, sortable: true, class: 'custom_table') do
    column :id
    column :status
    column :code
    column :usage_count
    column :archived_at

    column('Actions') do |coupon|
      link_to('archive', archive_admin_coupon_path(coupon), method: :put) if coupon.status == 'Active'
    end
  end
end

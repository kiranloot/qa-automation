        <%= t('privacy_policy.third_party_links_content').html_safe %>

        <b><%= t('privacy_policy.terms_conditions') %></b>
        <%= t('privacy_policy.terms_conditions_content').html_safe %>

        <b><%= t('privacy_policy.contacting_us') %></b>
        <%= t('privacy_policy.contacting_us_content', link_url: root_url, root_url: root_path).html_safe %>
      </div>

    </div>
  </div>
</div>



        <form accept-charset="UTF-8" action="//lootcrate.us5.list-manage.com/subscribe/post?u=1f53721d6da415ab862195987&amp;id=<%= listid %>" class="simple_form new_user" id="new_user" method="post" target="blank" novalidate="novalidate">

          <div class="form-group email optional user_email">
            <label class="email optional control-label" for="user_email"><%= t('sold_out.email') %></label>
            <input class="string email optional form-control" id="user_email" type="email" name="EMAIL" value="">
          </div>

          <div class="form-actions">
            <input class="btn btn-secondary btn-select" name="commit" type="submit" value="SIGN UP">

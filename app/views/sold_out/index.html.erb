<%
  currentmonth = t('sold_out.current_month') # usually all caps
  nextmonth = t('sold_out.next_month')
  listid = "b22feaf8ab" # this comes from from MailChimp https://us5.admin.mailchimp.com/lists/settings/defaults?id=XxXxX (September 2014 - this should now be the same every month)
  soldout_imagename = "soldout.jpg"
%>


<div class="white-bg">
  <div class="container">
    <div class="row visible-xs visible-sm" >
      <div class="col-md-6 mobile-container">
        <h1 class="headerWhite"><%= t('sold_out.crates_are_sold_out', current_month: currentmonth) %></h1>
        <h2><%= t('sold_out.join_our_waitlist', next_month: nextmonth) %></h2>

        <form accept-charset="UTF-8" action="//lootcrate.us5.list-manage.com/subscribe/post?u=1f53721d6da415ab862195987&amp;id=<%= listid %>" class="simple_form new_user" id="new_user" method="post" role="form" target="blank" novalidate="novalidate">

          <div class="form-group email optional user_email">
            <label class="email optional control-label" for="user_email"><%= t('sold_out.email') %></label>
            <input class="string email optional form-control" id="user_email" type="email" name="EMAIL" value="">
          </div>

          <div class="form-actions">
            <input class="btn btn-secondary btn-select" name="commit" type="submit" value="<%= t(:sign_up).upcase %>">
          </div>
        </form>
      </div>
    </div>

    <div class="row hidden-xs hidden-sm relative">
      <div class="col-md-6 signup-left"> <!-- use for gray bg: sign-up-image -->
        <img src="<%= image_path(soldout_imagename) %>" alt="Sold Out!"/>
      </div>
      <div class="col-md-6 signup-right">
        <h1 class="headerWhite"><%= t('sold_out.crates_are_sold_out', current_month: currentmonth) %></h1>
        <span><%= t('sold_out.join_our_waitlist', next_month: nextmonth) %></h3>

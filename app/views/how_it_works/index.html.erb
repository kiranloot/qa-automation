<div class='how-it-works'>
  <div class='hiw-bg'>
    <div class='container'>
      <div class='line-header'>
        <div class='line'></div>
        <h4 class='gray'><%= t('how_it_works.title') %></h4>
      </div>
    </div>

    <div class='container'>
      <div class='row align-center'>
        <div class='col-sm-4'>
          <%= image_tag('step1.png', class: 'center-block img-responsive') %>
          <div>
            <span class='circle'><span class='circle-number'>1</span></span>
          </div>
          <h3><%= t('how_it_works.subtitle1').html_safe %></h3>
          <ul class='unstyled'>
            <li><%= t('how_it_works.subtext1') %></li>
          </ul>
        </div>
        <div class='col-sm-4'>
          <%= image_tag('step2.png', class: 'center-block img-responsive') %>
          <div>
            <span class='circle'><span class='circle-number'>2</span></span>
          </div>
          <h3><%= t('how_it_works.subtitle2') %></h3>
          <ul class='unstyled'>
            <li><%= t('how_it_works.subtext2') %></li>
          </ul>
        </div>
        <div class='col-sm-4'>
          <%= image_tag('step3.png', class: 'center-block img-responsive') %>
          <div>
            <span class='circle'><span class='circle-number'>3</span></span>
          </div>
          <h3><%= t('how_it_works.subtitle3') %></h3>
          <ul class='unstyled align-center'>
            <li><%= t('how_it_works.subtext3') %></li>
          </ul>
          <p class='plus-message align-center'>
            <%= t('how_it_works.extratext3') %>
            <%= link_to '?', '#', class: 'circle circle-question-mark', id: 'popover-more-info' %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div id='megacrate-popover-title' class='hide'>
    <%= t('how_it_works.megacrate_winners.title') %>
  </div>

  <div id='megacrate-popover-content' class='hide'>
    <p><%= t('how_it_works.megacrate_winners.subtitle') %></p>
    <ul class='unstyled'>
      <li><%= t('how_it_works.megacrate_winners.subtext1').html_safe %></li>
      <li><%= t('how_it_works.megacrate_winners.subtext2').html_safe %></li>
      <li><%= t('how_it_works.megacrate_winners.subtext3').html_safe %></li>
      <li><%= t('how_it_works.megacrate_winners.subtext4').html_safe %></li>
    </ul>
  </div>

  <div data-hook='video_partial' class='hiw-video'>
    <%= render :partial => 'shared/video' %>
  </div>

  <div data-hook='megacrate_partial' class='hiw-megacrate'>
    <%= render :partial => 'shared/megacrate' %>
  </div>
</div>